{
  "name": "to_json",

  "beam_module": "Elixir.Astarte.Flow.Blocks.JsonMapper",
  "type": "producer_consumer",

  "schema": {
    "$id": "https://astarte-platform.org/specs/astarte_flow/blocks/to_json.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ToJSONOptions",
    "type": "object",

    "additionalProperties": false,

    "properties": {
      "pretty": {
        "type": "boolean",
        "description": "Serialize the output to pretty format that is easier to read for humans.",
        "default": "false"
      },
      "template": {
        "type": "object",
        "description": "Apply given JSONTemplate."
      }
    }
  }
}
